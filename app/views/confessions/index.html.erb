

<% @confession.each do |confession| %>
  <tr>
  	<h2>
  <span>No. <%= confession.id %> on <%= confession.created_at.strftime("%Y-%m-%d")%> </span>
  	<h1><%= confession.saying %></h1>
    <h2><%= confession.author %></h2>
    <% if user_signed_in? %> 
    <%= link_to 'Edit', edit_confession_path(@confession), class: 'btn btn-primary' %> 
    <%= link_to 'Destroy', confession_path(@confession), method: :delete, data: {confirm: 'Are you sure you want to delete this confession?'},class: 'btn btn-danger' %>
    <% end %> 
	</br>

  </tr>
  <br>
<% end %>